{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user profile.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "Name of the user."
        },
        "email": {
          "type": "string",
          "description": "Email of the user.",
          "format": "email"
        },
        "initials": {
            "type": "string",
            "description": "User's initials."
        },
        "memberSince": {
            "type": "string",
            "description": "Date user became a member.",
            "format": "date-time"
        }
      },
      "required": ["id", "name", "email", "initials", "memberSince"]
    },
    "Event": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Event",
      "type": "object",
      "description": "Represents a music event.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the event."
        },
        "creatorId": {
          "type": "string",
          "description": "The ID of the user who created the event."
        },
        "title": {
          "type": "string",
          "description": "Title of the event."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the event."
        },
        "location": {
          "type": "string",
          "description": "Location where the event is held."
        },
        "date": {
          "type": "string",
          "description": "Date of the event.",
          "format": "date"
        },
        "time": {
          "type": "string",
          "description": "Time of the event."
        },
        "category": {
          "type": "string",
          "enum": ["Rock", "Pop", "Electronic"],
          "description": "Category of the event."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "imageHint": {
          "type": "string"
        },
        "views": {
          "type": "number",
          "description": "Number of times the event has been viewed."
        }
      },
      "required": [
        "id",
        "creatorId",
        "title",
        "description",
        "location",
        "date",
        "time",
        "category",
        "imageUrl",
        "imageHint",
        "views"
      ]
    },
    "Attendee": {
        "title": "Attendee",
        "type": "object",
        "description": "Represents a user attending an event. The document ID is the user's ID.",
        "properties": {
            "joinedAt": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp when the user joined the event."
            }
        },
        "required": ["joinedAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information."
        }
      },
      {
        "path": "/events/{eventId}",
        "definition": {
          "entityName": "Event",
          "schema": {
            "$ref": "#/entities/Event"
          },
          "description": "Stores all event documents."
        }
      },
      {
        "path": "/events/{eventId}/attendees/{userId}",
        "definition": {
            "entityName": "Attendee",
            "schema": {
                "$ref": "#/entities/Attendee"
            },
            "description": "Subcollection to track attendees for each event. Document ID is the user ID."
        }
      }
    ]
  }
}
