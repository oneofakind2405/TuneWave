rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(creatorId) {
      return request.auth.uid == creatorId;
    }

    match /users/{userId} {
      allow read;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }

    match /events/{eventId} {
      allow read;
      allow create: if request.auth != null && isOwner(request.resource.data.creatorId);
      
      allow update: if request.auth != null && isOwner(resource.data.creatorId);

      allow delete: if request.auth != null && isOwner(resource.data.creatorId);

      match /attendees/{userId} {
        allow read;
        allow create: if isOwner(userId);
        allow delete: if isOwner(userId);
      }

      match /views/{viewId} {
        allow read;
        allow create: if request.auth != null;
      }
    }
  }
}
